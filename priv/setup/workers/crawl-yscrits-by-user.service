[Unit]
Description=yousuu review crawler
After=network.target
StartLimitIntervalSec=0

[Service]
Type=oneshot
User=nipin
WorkingDirectory=/app/chivi
Environment=CV_ENV=production
ExecStart=/app/chivi/bin/yscrit_crawl_by_user

StandardOutput=file:/app/chivi/log/yscrit-crawl-by-user.log
StandardError=append:/app/chivi/log/yscrit-crawl-by-user-err.log


[Install]
WantedBy=multi-user.target
