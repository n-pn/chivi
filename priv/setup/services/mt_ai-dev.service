[Unit]
Description=mt_ai dev server
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=5
User=nipin
Environment=PORT=5120
Environment=CV_ENV=development
WorkingDirectory=/app/chivi.dev
ExecStart=/app/chivi.dev/bin/mt_ai-srv
StandardOutput=file:/app/chivi.dev/log/mt_ai-srv.log
StandardError=append:/app/chivi.dev/log/mt_ai-err.log

[Install]
WantedBy=multi-user.target
