[Unit]
Description=mt_v1 server
Requires=network.target postgresql.service
After=postgresql.service
AllowIsolate=yes

StartLimitIntervalSec=400
StartLimitBurst=20
StartLimitAction=reboot

[Service]
Type=simple
Restart=always
RestartSec=15
TimeoutSec=600

User=nipin
Environment=PORT=5110
Environment=CV_ENV=production
WorkingDirectory=/2tb/app.chivi
ExecStart=/2tb/app.chivi/bin/mt_v1-srv

StandardOutput=file:/2tb/app.chivi/log/mt_v1-srv.log
StandardError=append:/2tb/app.chivi/log/mt_v1-err.log

[Install]
WantedBy=multi-user.target
