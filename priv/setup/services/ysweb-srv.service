[Unit]
Description=ysweb server
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=5
User=nipin
Environment=PORT=5509
Environment=AMBER_ENV=production
WorkingDirectory=/home/nipin/srv/chivi.app
ExecStart=/home/nipin/srv/chivi.app/bin/ysweb-srv

[Install]
WantedBy=multi-user.target
