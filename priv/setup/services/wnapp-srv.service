[Unit]
Description=wnapp server
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=5
User=nipin
Environment=PORT=5020
Environment=CV_ENV=production
WorkingDirectory=/app/chivi.app
ExecStart=/app/chivi.app/bin/wnapp-srv
StandardOutput=file:/app/chivi.app/log/wnapp-srv.log
StandardError=append:/app/chivi.app/log/wnapp-err.log

[Install]
WantedBy=multi-user.target
