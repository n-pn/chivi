[Unit]
Description=cvmtl server
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=5
User=nipin
Environment=PORT=5502
Environment=CV_ENV=production
WorkingDirectory=/app/chivi
ExecStart=/app/chivi/bin/cvmtl-srv
StandardOutput=file:/app/chivi/log/cvmtl-srv.log
StandardError=append:/app/chivi/log/cvmtl-err.log

[Install]
WantedBy=multi-user.target
