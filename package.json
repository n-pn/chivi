    "ys-up": "bash priv/scripts/yousuu-upload.sh",
    "ys-bk": "bash priv/scripts/yousuu-backup.sh",
    "backup": "yarn db-bk all && yarn ys-bk",
    "upload": "yarn db-up all && yarn ys-up",
    "build": "shards build -s --release --production",
    "build-mt": "shards build -s --release --production -Dpreview_mt",
    "dev": "bash priv/invoke-dev.sh",
    "rs": "bash priv/restart-srv.sh"
