{
  "private": true,
  "scripts": {
    "db-up": "bash etc/script/upload-assets.sh",
    "db-dn": "bash etc/script/backup-assets.sh",
    "ys-up": "bash etc/script/upload-yousuu.sh",
    "ys-dn": "bash etc/script/backup-yousuu.sh",
    "build": "shards build --release",
    "build-mt": "shards build --release -Dpreview_mt",
    "web-up": "cd web && yarn build && git push prod",
    "rs-app": "ssh deploy@ssh.chivi.xyz \"sudo service chivi-client restart\"",
    "rs-srv": "ssh deploy@ssh.chivi.xyz \"sudo service chivi-server restart\"",
    "report": "ssh deploy@ssh.chivi.xyz \"/bin/bash -ic 'gen_cv_report'\"",
    "map-yousuu": "./bin/map_yousuu",
    "map-zhwenpg": "./bin/map_zhwenpg",
    "map_remote": "./bin/map_remote",
    "map-remotes": "./bash cli/serial/map_remote.sh",
    "cr-ys-info": "ruby tasks/workers/yousuu_infos.rb",
    "cr-ys-crit": "ruby tasks/workers/yousuu_crits.rb",
    "fix-covers": "./bin/fetch_covers && ruby tasks/seeding/cover_webp.rb",
    "backup": "./bin/migrate_dicts && yarn db-dn",
    "update": "yarn map-yousuu && yarn map-zhwenpg && yarn map-remotes && yarn fix-covers",
    "gen-sentry": "crystal build --release config/.sentry/sentry_cli.cr -o bin/sentry"
  }
}
